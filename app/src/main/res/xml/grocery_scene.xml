<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/tools">
    <!--
        <Transition
            app:constraintSetEnd="@id/detailEnd"
            app:constraintSetStart="@id/detailStart"
            app:duration="500"></Transition>-->


    <ConstraintSet android:id="@+id/start" />
    <ConstraintSet android:id="@+id/detailEnd">
        <Constraint
            android:id="@id/motionLayoutDetail"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Motion
                app:pathMotionArc="startHorizontal"
                app:transitionEasing="decelerate" />
        </Constraint>

    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start">
        <OnSwipe
            app:dragDirection="dragUp"
            app:onTouchUp="autoComplete"
            app:touchAnchorId="@id/cardCart"
            app:touchAnchorSide="top"
            app:touchRegionId="@id/cardCart" />

    </Transition>


    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/guide"
            app:layout_constraintGuide_begin="156dp" />


        <Constraint
            android:id="@id/toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <Transform android:translationY="-700dp" />

        </Constraint>


    </ConstraintSet>


</MotionScene>