<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/motionLayoutDetail"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="#ffffff"
    app:layoutDescription="@xml/detail_scene"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/imgDetailBack"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_margin="24dp"
        android:alpha="0"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgDetail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:background="#fff"
        android:padding="24dp"
        android:src="@drawable/banana"
        app:layout_constraintBottom_toTopOf="@id/guideDetailMid"
        app:layout_constraintDimensionRatio="3:2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgDetailBack"
        app:layout_goneMarginTop="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideDetailMid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <TextView
        android:id="@+id/txtDetailName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:alpha="0"
        android:text="Banana"
        android:textColor="#000000"
        android:textFontWeight="700"
        android:textSize="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideDetailMid" />

    <TextView
        android:id="@+id/txtDetailWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:alpha="0"
        android:text="100g"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtDetailName" />

    <TextView
        android:id="@+id/txtDetailPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="24dp"
        android:alpha="0"
        android:text="$5.30"
        android:textColor="#000000"
        android:textFontWeight="700"
        android:textSize="36dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtDetailWeight" />

    <TextView
        android:id="@+id/txtAboutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="24dp"
        android:alpha="0"
        android:text="About the product"
        android:textColor="#000000"
        android:textFontWeight="200"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtDetailPrice" />

    <TextView
        android:id="@+id/txtAboutMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="24dp"
        android:alpha="0"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtAboutTitle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCart"
        android:layout_width="200dp"
        android:layout_height="64dp"
        android:layout_marginRight="24dp"
        android:alpha="0"
        android:text="Add to cart"
        android:textColor="#000"
        android:textStyle="bold"
        app:backgroundTint="#FDA104"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtAboutMsg" />

</androidx.constraintlayout.motion.widget.MotionLayout>