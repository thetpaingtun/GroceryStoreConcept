<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motionRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99E7E0E0"
    app:layoutDescription="@xml/grocery_scene"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/white"
        android:minHeight="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingBottom="176dp"
        android:translationY="176dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@id/guide"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="120dp" />

    <com.gmail.tpt.grocerystore.CartFrameLayout
        android:id="@+id/cardCart"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guide">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black">

            <TextView
                android:id="@+id/txtCartTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="Cart"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@id/bottomGuide"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.gmail.tpt.grocerystore.CartHeaderLayout
                android:id="@+id/cardHeaderLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@id/bottomGuide"
                app:layout_constraintLeft_toRightOf="@id/txtCartTitle"
                app:layout_constraintRight_toLeftOf="@id/civTotal"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!--        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/civFruit"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/avocado"
                            app:civ_border_width="1dp" />

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/civFruit2"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="16dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/strawberry"
                            app:civ_border_width="1dp" />-->

            </com.gmail.tpt.grocerystore.CartHeaderLayout>

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/civTotal"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginRight="24dp"
                android:scaleType="centerCrop"
                android:src="@drawable/abc_vector_test"
                app:civ_border_width="1dp"
                app:layout_constraintBottom_toTopOf="@id/bottomGuide"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/civHidden"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="24dp"
                android:scaleType="centerCrop"
                android:visibility="invisible"
                app:civ_border_width="1dp"
                app:layout_constraintBottom_toTopOf="@id/bottomGuide"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/bottomGuide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="140dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bottomGuide" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.gmail.tpt.grocerystore.CartFrameLayout>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupBase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="motionRoot,toolbar,recyclerView,cardCart" />
</androidx.constraintlayout.motion.widget.MotionLayout>
